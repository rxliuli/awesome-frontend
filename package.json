{
  "name": "frontend-awesome",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "gen": "joplin-blog wiki",
    "docs:dev": "yarn gen && vuepress dev docs",
    "docs:build": "yarn gen && vuepress build docs",
    "docs:deploy": "yarn docs:build && gh-pages -d docs/.vuepress/dist",
    "sync": "gulp sync",
    "postinstall": "npx simple-git-hooks"
  },
  "prettier": "@liuli-util/prettier-standard-config",
  "lint-staged": {
    "*.{ts,tsx,css,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "devDependencies": {
    "@liuli-util/prettier-standard-config": "^0.1.0",
    "@liuli-util/tree": "^3.2.5",
    "@types/fs-extra": "^9.0.11",
    "fs-extra": "^10.0.0",
    "gh-pages": "^3.1.0",
    "gulp": "^4.0.2",
    "joplin-blog": "^0.5.1",
    "lint-staged": "^10.5.1",
    "luxon": "^1.27.0",
    "prettier": "^2.3.0",
    "simple-git": "^2.39.0",
    "simple-git-hooks": "^2.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "vuepress-vite": "^2.0.0-beta.22"
  }
}
